---
/**
 * ProgressIndicator.astro
 * Indicador visual de progreso general del laboratorio
 */

export interface Props {
  completedLevels: number;
  totalLevels: number;
  currentLevel?: number;
}

const { completedLevels, totalLevels, currentLevel } = Astro.props;

const progressPercentage = Math.round((completedLevels / totalLevels) * 100);
---

<div class="card p-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="font-semibold text-white">Tu Progreso</h3>
    <span class="text-2xl font-bold text-gradient">{progressPercentage}%</span>
  </div>

  <!-- Barra de progreso principal -->
  <div class="progress-bar h-3 mb-4">
    <div 
      class="progress-bar-fill" 
      style={`width: ${progressPercentage}%`}
    ></div>
  </div>

  <!-- EstadÃ­sticas -->
  <div class="grid grid-cols-3 gap-4 text-center">
    <div class="bg-slate-900/50 rounded-lg p-3">
      <p class="text-2xl font-bold text-green-400">{completedLevels}</p>
      <p class="text-xs text-slate-500">Completados</p>
    </div>
    <div class="bg-slate-900/50 rounded-lg p-3">
      <p class="text-2xl font-bold text-yellow-400">{currentLevel ?? '-'}</p>
      <p class="text-xs text-slate-500">Nivel Actual</p>
    </div>
    <div class="bg-slate-900/50 rounded-lg p-3">
      <p class="text-2xl font-bold text-slate-400">{totalLevels - completedLevels}</p>
      <p class="text-xs text-slate-500">Restantes</p>
    </div>
  </div>

  <!-- Indicador visual de niveles -->
  <div class="mt-6">
    <p class="text-xs text-slate-500 mb-2">Niveles</p>
    <div class="flex gap-2">
      {Array.from({ length: totalLevels }, (_, i) => i + 1).map((level) => (
        <div 
          class:list={[
            "flex-1 h-2 rounded-full transition-all",
            level <= completedLevels 
              ? "bg-green-500" 
              : level === currentLevel 
                ? "bg-yellow-500 animate-pulse" 
                : "bg-slate-700"
          ]}
          title={`Nivel ${level}`}
        ></div>
      ))}
    </div>
  </div>
</div>
