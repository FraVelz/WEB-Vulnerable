---
/**
 * CategorySection.astro
 * Sección de categoría de vulnerabilidades
 */

import VulnerabilityCard from './VulnerabilityCard.astro';
import Badge from '@/components/ui/Badge.astro';

export interface Vulnerability {
  id: string;
  title: string;
  description: string;
  difficulty: 'Básico' | 'Intermedio' | 'Avanzado';
  status: string;
  category: string;
}

export interface Props {
  id: string;
  title: string;
  description: string;
  vulnerabilities: Vulnerability[];
  summary: string;
}

const { id, title, description, vulnerabilities, summary } = Astro.props;
---

<section class="card p-6" data-category-id={id}>
  <!-- Header de categoría -->
  <div class="flex items-start justify-between mb-6">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-lab-primary-500/20 to-lab-accent-500/20 flex items-center justify-center border border-slate-700">
        <svg class="w-6 h-6 text-lab-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      </div>
      <div>
        <h2 class="text-xl font-semibold text-white mb-1">{title}</h2>
        <p class="text-sm text-slate-400">{description}</p>
      </div>
    </div>
    <Badge text={`${vulnerabilities.length} vulnerabilidades`} variant="info" />
  </div>

  <!-- Resumen de la categoría -->
  <div class="mb-6 p-4 rounded-lg bg-slate-900/50 border border-slate-700/50">
    <p class="text-sm text-slate-300 leading-relaxed" id={`summary-${id}`}>
      {summary}
    </p>
  </div>

  <!-- Grid de vulnerabilidades -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
    {vulnerabilities.map((vuln) => (
      <VulnerabilityCard
        title={vuln.title}
        description={vuln.description}
        difficulty={vuln.difficulty}
        category={vuln.category}
        dataAttributes={{
          'vuln-title': vuln.title.toLowerCase(),
          'vuln-description': vuln.description.toLowerCase(),
          'vuln-category': vuln.category.toLowerCase(),
          'vuln-difficulty': vuln.difficulty.toLowerCase(),
        }}
      />
    ))}
  </div>
</section>
