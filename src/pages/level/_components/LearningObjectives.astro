---
/**
 * LearningObjectives.astro
 * Secci√≥n de objetivos de aprendizaje
 */
export interface Props {
  objectives: string[];
}

const { objectives } = Astro.props;
---

<section class="card p-6">
  <h2 class="text-xl font-semibold text-white mb-4 flex items-center gap-2">
    <svg class="w-5 h-5 text-lab-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
    </svg>
    Objetivos de Aprendizaje
  </h2>
  <ul class="space-y-3">
    {objectives.map((objective, index) => (
      <li class="flex items-start gap-3">
        <span class="w-6 h-6 rounded-full bg-lab-primary-500/20 text-lab-primary-400 flex items-center justify-center text-sm font-medium flex-shrink-0">
          {index + 1}
        </span>
        <span class="text-slate-300">{objective}</span>
      </li>
    ))}
  </ul>
</section>
