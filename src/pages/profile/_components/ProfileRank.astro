---
/**
 * ProfileRank.astro
 * Componente para mostrar el rango del usuario
 */
export interface Props {
  rank: string;
}

const { rank } = Astro.props;
---

<div class="card p-6 text-center">
  <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-lab-primary-500 to-lab-accent-500 flex items-center justify-center">
    <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
        d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
    </svg>
  </div>
  <h3 class="text-lg font-semibold text-white mb-1">
    {rank}
  </h3>
  <p class="text-sm text-slate-400">Tu rango actual</p>
</div>
